@{
    ViewBag.Title = "Examples";
    ViewBag.SubTitle = "Login";
}

@section Menu {
    @Scripts.Render("~/Scripts/Examples/Login/menu")
}

@Styles.Render("~/AdminLTE/plugins/icheck/css/sqare/blue")

<div class="login-box">
    <div class="login-logo">
        <img src="~/images/drawable-hdpi/ic_launcher4.png" />
        <a href="@Url.Action("index", "Home")">Bem vindo <b>AdmSiS!</b></a>
    </div>
    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form href="#" method="post">
            <div class="form-group has-feedback">
                <input type="email" class="form-control" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> Lembrar
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Login</button>
                </div>
            </div>
        </form>

        <a href="#">Esqueci minha senha</a><br>
        <a href="#" class="text-center">Registra novo usuario</a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/icheck/js")
    @Scripts.Render("~/Scripts/Examples/Login")
}


